<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hzn.easypulllayout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".recyclerview.RecyclerViewActivity"
            android:label="@string/activity_recycler_view" />
        <activity
            android:name=".listview.ListViewActivity"
            android:label="@string/activity_list_view" />
        <activity
            android:name=".viewpager.ViewPagerActivity"
            android:label="@string/activity_view_pager" />
        <activity
            android:name=".viewpager.DetailActivity"
            android:label="@string/activity_detail" />
        <activity
            android:name=".fixed.FixedActivity"
            android:label="@string/activity_fixed" />
        <activity
            android:name=".nested.NestedActivity"
            android:label="@string/activity_nested" />
    </application>

</manifest>